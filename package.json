{
  "name": "ts-express-kit",
  "version": "1.1.4",
  "description": "A TypeScript starter kit for building Express applications with best practices.",
  "main": "index.js",
  "bin": {
    "ts-express-kit": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "npx eslint ./src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "typescript",
    "express",
    "node",
    "ts-express-kit"
  ],
  "author": "Nasim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nazmulhasannasim333/ts-express-kit.git"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^24.2.1",
    "eslint": "^9.32.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
